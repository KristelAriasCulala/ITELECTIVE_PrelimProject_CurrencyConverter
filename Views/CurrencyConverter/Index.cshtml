@model ITELECTIVE_PrelimProject_CurrencyConverter.Models.CurrencyConverterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Currency Converter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('/images/bg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Montserrat', sans-serif;
        }

        .blur-container {
            background: rgba(11, 19, 37, 0.5);
            backdrop-filter: blur(10px);
            border: 1px solid #ccc;
            padding: 49px;
            border-radius: 10px;
            width: 39%;
            color: white;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.5), 0 0 30px rgba(0, 255, 255, 0.5), 0 0 40px rgba(0, 255, 255, 0.5), 0 0 50px rgba(0, 255, 255, 0.5);
        }

        .form-label {
            color: white;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid white;
            color: white;
        }

        .form-select {
            background: #c7c7c747;
            border: 1px solid white;
            color: white;
        }

            .form-select option {
                background: black;
                color: white;
            }

        .btn-primary {
            font-family: 'Montserrat', sans-serif;
            background-color: #ffffff;
            border-color: #ffff;
            color: #1a1a1a;
            font-weight: bold;
            width: 397px;
            height: 43px;
            font-size: 14px;
        }

        .result {
            text-align: center;
            font-size: 1.2em;
            background: rgba(255, 255, 255, 0.2);
            padding: 10px;
            border-radius: 10px;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="blur-container">
            <h1 class="text-center mb-4">Currency Converter</h1>
            <form asp-action="Convert" asp-controller="CurrencyConverter" method="post">
                <div class="mb-3">
                    <label for="Amount" class="form-label">Enter Amount:</label>
                    <input type="number" step="0.01" class="form-control" id="Amount" name="Amount" value="@Model?.Amount" required />
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="FromCurrency" class="form-label">From:</label>
                        <select class="form-select" id="FromCurrency" name="FromCurrency" required>
                            <option value="USD" selected>USD</option>
                            <option value="PHP">PHP</option>
                            <option value="EUR">EUR</option>
                            <option value="GBP">GBP</option>
                            <option value="JPY">JPY</option>
                            <option value="AUD">AUD</option>
                            <option value="CAD">CAD</option>
                            <option value="CHF">CHF</option>
                            <option value="CNY">CNY</option>
                            <option value="INR">INR</option>
                        </select>
                    </div>
                    <div class="col">
                        <label for="ToCurrency" class="form-label">To:</label>
                        <select class="form-select" id="ToCurrency" name="ToCurrency" required>
                            <option value="PHP" selected>PHP</option>
                            <option value="USD">USD</option>
                            <option value="EUR">EUR</option>
                            <option value="GBP">GBP</option>
                            <option value="JPY">JPY</option>
                            <option value="AUD">AUD</option>
                            <option value="CAD">CAD</option>
                            <option value="CHF">CHF</option>
                            <option value="CNY">CNY</option>
                            <option value="INR">INR</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Get Exchange Rate</button>
            </form>

            @if (Model?.ConvertedAmount > 0)
            {
                <div class="result mt-4">
                    @Model.Amount @Model.FromCurrency = @Model.ConvertedAmount.ToString("F2") @Model.ToCurrency
                </div>
            }
        </div>
    </div>
</body>
</html>